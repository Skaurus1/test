version: "3.4"

x-logging: &logging
  logging:
    driver: loki
    options:
      loki-url: "http://127.0.0.1:3100/loki/api/v1/push"
      mode: non-blocking
      loki-retries: "3"
      loki-timeout: "5s"
      loki-batch-size: "10"
      loki-external-labels: job=tools

services:
    nodeexporter:
        image: prom/node-exporter:{{ nodeexporter_version }}
        restart: unless-stopped
        privileged: true
        volumes:
            - /proc:/host/proc:ro
            - /sys:/host/sys:ro
            - /:/rootfs:ro
        command: >-
            --path.procfs=/host/proc
            --path.rootfs=/rootfs
            --path.sysfs=/host/sys
            --collector.filesystem.mount-points-exclude=^/(sys|proc|dev|host|etc)($$|/)
        labels:
            prometheus: true
        ports:
            - "9100:9100"
        networks:
            - private
        <<: *logging

networks:
    private:
        internal: true
