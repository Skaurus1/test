version: "3.4"

x-logging: &logging
  logging:
    driver: loki
    options:
      loki-url: "http://127.0.0.1:3100/loki/api/v1/push"
      mode: non-blocking
      loki-retries: "3"
      loki-timeout: "5s"
      loki-batch-size: "10"
      loki-external-labels: job=tools

services:
    cadvisor:
        image: google/cadvisor:{{ cadvisor_version}}
        restart: unless-stopped
        privileged: true
        volumes:
            - /:/rootfs:ro
            - /var/run:/var/run:rw
            - /var/lib/docker/:/var/lib/docker:ro
            - /dev/disk/:/dev/disk:ro
            - /cgroup:/sys/fs/cgroup:ro
        labels:
            prometheus: true
        ports:
            - "8080:8080"
        networks:
            - private
        <<: *logging

networks:
  private:
    internal: true
